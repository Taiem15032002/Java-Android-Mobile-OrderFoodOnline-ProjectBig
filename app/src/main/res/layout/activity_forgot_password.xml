<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ForgotPasswordActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/back_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_back_maincolor"
                    android:gravity="center"
                    android:textColor="@color/main_color"
                    android:textSize="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <TextView
                    android:id="@+id/tvforgotpassword"
                    android:text="ForgotPassword"
                    android:textColor="@color/main_color"
                    android:textStyle="bold"
                    android:textSize="40dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="65dp"
                    app:layout_constraintTop_toBottomOf="@+id/back_container"
                    app:layout_constraintStart_toStartOf="parent"
                    ></TextView>
                <EditText
                    android:id="@+id/edtEmail_Forgot"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:hint="Email address"
                    android:drawableLeft="@drawable/ic_email"
                    android:drawablePadding="10dp"
                    android:textColor="@color/black"
                    android:textColorHint="#A5A5A5"
                    android:background="@drawable/edittext_userlogin"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvforgotpassword"
                    android:autofillHints="30dp" />
                <EditText
                    android:id="@+id/edtPassword_Forgot"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:hint="Create your password"
                    android:inputType="textPassword"
                    android:drawableLeft="@drawable/ic_key"
                    android:drawablePadding="10dp"
                    android:textColor="@color/black"
                    android:textColorHint="#A5A5A5"
                    android:background="@drawable/edittext_userlogin"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/edtEmail_Forgot"
                    android:autofillHints="30dp" />
                <EditText
                    android:id="@+id/edtRePassword_Forgot"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:hint="Enter your password again"
                    android:inputType="textPassword"
                    android:drawableLeft="@drawable/ic_key"
                    android:drawablePadding="10dp"
                    android:textColor="@color/black"
                    android:textColorHint="#A5A5A5"
                    android:background="@drawable/edittext_userlogin"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/edtPassword_Forgot"
                    android:autofillHints="30dp" />
                <TextView
                    android:id="@+id/btnRegister"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:background="@drawable/button_style"
                    android:gravity="center"
                    android:text="NEXT"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_15sdp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/edtRePassword_Forgot" />
                <!--                switch to register or forgot pass-->
                <TextView
                    android:id="@+id/tvBandacotaikhoan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Bạn đã có tài khoản? Login"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/btnRegister"
                    />
                <TextView
                    android:id="@+id/tvQuenmatkhau"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Quên mật khẩu !"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="2dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvBandacotaikhoan"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>